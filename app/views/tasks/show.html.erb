<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @task.name %>
</p>

<p>
  <strong>Effort:</strong>
  <%= @task.effort %>
</p>

<p>
  <strong>Job:</strong>
  <%= Job.find(@task.job_id).name %>
</p>

<%if @task.status%>
    <p><strong>Task Complete:</strong>Yes</p>
<%else%>
    <p><strong>Task Complete:</strong>No</p>
<%end%>

<%= link_to 'Edit', edit_task_path(@task) %> |
<%= link_to 'Back', tasks_path %>
